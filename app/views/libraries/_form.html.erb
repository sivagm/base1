    <%= f.number_field :phone,class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address,class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :website %>
    <%= f.text_field :website,class:'form-control' %>
  </div>

