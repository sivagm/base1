<p id="notice"><%= notice %></p>

<h2>Libraries</h2>
<div class='table-responsive'>
<table class='table table-hover table-condensed'>
  <thead>
    <tr class='active'>
      <th>Name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.name %></td>
        <td><%= library.phone %></td>
        <td><%= library.address %></td>
        <td><%= library.website %></td>
        <td ><%= link_to 'Show', library,class:'btn btn-link' %></td>
        <td ><%= link_to 'Edit', edit_library_path(library),class:'btn btn-link' %></td>
        <td ><%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-link' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Library', new_library_path,class:'btn btn-link' %>
